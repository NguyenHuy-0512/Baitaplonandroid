<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/Buy_Food_img"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/com_dua_bo">


    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Buy_Food_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Buy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/com_bo"
            android:textSize="16dp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Buy_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/minus">

            </ImageView>

            <TextView
                android:id="@+id/Buy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="1"
                android:textSize="20dp">

            </TextView>

            <ImageView
                android:id="@+id/Buy_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/plus">

            </ImageView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Xoa" />


    </LinearLayout>

    <TextView
        android:id="@+id/buy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/cost_rice">

    </TextView>
</RelativeLayout>