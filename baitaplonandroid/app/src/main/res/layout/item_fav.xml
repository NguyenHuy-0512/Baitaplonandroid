<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/Fav_Food_img"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/com_dua_bo">


    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Fav_Food_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fav_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/com_bo"
            android:textSize="16dp">

        </TextView>



        <TextView
            android:id="@+id/tieu_de_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tieu_de"
            android:textSize="16dp">

        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/Dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="Bỏ thích">

    </Button>

</RelativeLayout>