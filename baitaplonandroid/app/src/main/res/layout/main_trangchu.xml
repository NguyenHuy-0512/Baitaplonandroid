<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        //Header

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#00FF00"
            android:gravity="center">
            <!--app:menu="@menu/top_menu"-->


            <!--        <EditText-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:layout_marginLeft="40dp"-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_marginRight="100dp"-->
            <!--            android:layout_marginBottom="8dp"-->
            <!--            android:background="@drawable/search"-->
            <!--            android:textSize="20dp"-->
            <!--            android:textColorHint="#B2B1B1">-->

            <!--        </EditText>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Trang chủ"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/tim_kiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:src="@drawable/search_icon" />

            <ImageView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/buy">

            </ImageView>

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        //Bottom_nav

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#2B74FC"
            app:itemIconTint="@color/custom_color"
            app:itemTextColor="@color/custom_color"
            app:menu="@menu/menu_bottom_nav" />


        //Nội dung

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/amthuc"></ImageView>


                    //Danh mục

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Danh mục"
                        android:textSize="25dp">

                    </TextView>


                    //Dòng icon 1

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/com"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/com"></ImageView>


                        <ImageView

                            android:id="@+id/do_uong"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/do_uong"></ImageView>

                        <ImageView
                            android:id="@+id/trang_mieng"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/trang_mieng"></ImageView>


                    </LinearLayout>


                    //Nút bấm Món ăn 1

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/com_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Cơm">

                        </Button>

                        <Button
                            android:id="@+id/do_uong_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Đồ Uống">

                        </Button>

                        <Button
                            android:id="@+id/trang_mieng_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Kem">

                        </Button>
                    </LinearLayout>


                    //Dòng icon 2

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mon_xao"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/fry"></ImageView>


                        <ImageView
                            android:id="@+id/grilled"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:src="@drawable/grilled"></ImageView>


                    </LinearLayout>


                    //Nút bấm Món ăn 2

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/mon_xao_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text="Món Xào">

                        </Button>

                        <Button
                            android:id="@+id/grilled_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"

                            android:text="Nướng"

                            >

                        </Button>


                    </LinearLayout>
                    //Gợi ý cho bạn

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gợi ý cho bạn"
                            android:textSize="30dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:src="@drawable/hint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Món ăn được giảm giá"
                            android:textSize="30dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:src="@drawable/discount" />


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>


        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>